<style is:global>
  .post-header-image {
    @apply w-full relative mb-8 rounded-lg overflow-hidden;
    aspect-ratio: 16/9;
  }

  .post-header-image img {
    @apply w-full h-full object-cover;
  }

  .markdown-content {
    @apply text-h2-text text-lg leading-relaxed space-y-6;
  }

  .markdown-content h1 {
    @apply text-4xl font-bold text-h1-text mt-8 mb-4;
  }

  .markdown-content h2 {
    @apply text-3xl font-semibold text-h1-text mt-6 mb-4;
  }

  .markdown-content h3 {
    @apply text-2xl font-medium text-h1-text mt-4 mb-2;
  }

  .markdown-content p {
    @apply text-h2-text mb-4;
  }

  .markdown-content ul {
    @apply list-disc list-inside space-y-2 ml-4 text-h2-text;
  }

  .markdown-content ol {
    @apply list-decimal list-inside space-y-2 ml-4 text-h2-text;
  }

  .markdown-content pre {
    @apply bg-gray-900 rounded-lg p-6 my-6 overflow-x-auto border border-gray-700 shadow-lg;
    font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    position: relative;
  }

  .markdown-content pre code {
    @apply bg-transparent p-0 text-gray-100;
    font-size: inherit;
    border-radius: 0;
  }

  .markdown-content code {
    @apply bg-gray-800 rounded px-2 py-1 text-yellow-300 border border-gray-600;
    font-family: 'JetBrains Mono', 'Fira Code', 'Monaco', 'Consolas', monospace;
    font-size: 0.85rem;
  }

  .markdown-content pre:hover {
    @apply border-gray-600;
    transition: border-color 0.2s ease;
  }

  /* Syntax highlighting improvements */
  .markdown-content pre code .token.comment {
    color: #6b7280;
    font-style: italic;
  }

  .markdown-content pre code .token.keyword {
    color: #f59e0b;
    font-weight: bold;
  }

  .markdown-content pre code .token.string {
    color: #10b981;
  }

  .markdown-content pre code .token.function {
    color: #3b82f6;
  }

  .markdown-content pre code .token.number {
    color: #f472b6;
  }

  .markdown-content pre code .token.operator {
    color: #f59e0b;
  }

  .markdown-content pre code .token.punctuation {
    color: #9ca3af;
  }

  /* Copy button for code blocks */
  .markdown-content pre::before {
    content: attr(data-language);
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    background: rgba(0, 0, 0, 0.5);
    color: #9ca3af;
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 500;
  }

  /* Remove unwanted lines/borders from code blocks */
  .markdown-content pre,
  .markdown-content pre[class*="language-"] {
    box-shadow: none !important;
  }

  .markdown-content pre code,
  .markdown-content pre code[class*="language-"] {
    border: none !important;
    box-shadow: none !important;
    text-shadow: none !important;
  }

  /* Override Prism.js theme styles that add unwanted decorations */
  .markdown-content pre[class*="language-"]::before,
  .markdown-content pre[class*="language-"]::after {
    display: none !important;
  }

  .markdown-content blockquote {
    @apply border-l-4 border-gray-600 pl-4 italic text-h2-text;
  }

  .markdown-content a {
    @apply text-[#f9e79f] hover:text-[#f7d794] hover:underline transition-colors duration-300;
  }

  .markdown-content a:focus {
    @apply outline-[2px] outline-dashed outline-[#f9e79f] outline-offset-2;
  }

  .markdown-content hr {
    @apply border-gray-600 my-8;
  }

  .markdown-content table {
    @apply w-full border-collapse border border-gray-700 my-4;
  }

  .markdown-content th,
  .markdown-content td {
    @apply border border-gray-700 p-2 text-h2-text;
  }
</style>
