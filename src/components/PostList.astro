---
import Tags from './Tags.astro';

interface Props {
  posts: Array<any>;
}

const { posts } = Astro.props as Props;
---

{
  posts.map((post: any) => (
    <li class="p-4 relative before:content-['â€¢'] before:absolute before:left-0 before:text-h1-text before:font-bold before:top-1/2 before:transform before:-translate-y-1/2 pl-6">
