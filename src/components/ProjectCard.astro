---
const { title, image, description, isArchived, link, tags } = Astro.props;
---

<section class="card">
  <div class="card-header">
    <img class="card-image" src={image} alt={title} />
    <div class="card-title">
      <h2>{title}</h2>
    </div>
  </div>
  <div class="card-body">
    <p>{description}</p>
    <p>üèÅ {isArchived ? "archived" : "active"}</p>
    <p>#Ô∏è {tags.join(", ")}</p>
    <p>üîó <a class="link" href={link.url}> {link.name}</a></p>
  </div>
</section>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: #18181b;
    border-radius: 5px;
    border: 1px solid #2d2d2d;
    color: #aaaaaa;
    padding: 10px;
  }

  .card:hover {
    border: 1px solid #aaaaaa;
  }

  .card-header {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 20px;
  }

  .card-image {
    border-radius: 50%;
    max-width: 50px;
    width: 100%;
    height: 50px;
    object-fit: cover;
    background-color: black;
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-left: 20px;
  }

  .card-body {
    display: flex;
    flex-direction: column;
    text-align: left;
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 20px;
  }

  .link {
    color: #aaaaaa;
    margin-right: 10px;
  }

  .link:hover {
    color: #e6bf00;
  }
</style>
